{
  "version": "0.2.0",
  "configurations": [
  {
    "type": "node",
    "request": "launch",
    "name": "Lint",
    "runtimeExecutable": "npm",
    "runtimeArgs": ["run", "lint"]
  },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": ["--watch"],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}